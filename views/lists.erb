<ul id="lists" >
  <% sort_lists(@lists) do |list|%>
  <% if list_complete?(list) %>
    <li class="complete" >
  <% else%>
    <li class="" >
  <% end %>
       <a href="/lists/<%= list[:id] %>">
        <h2 > <%= list[:name] %><h2>
        <p>
          <%= "#{list[:todos_count]}/#{list[:todos_remaining_count]}" %>
        </p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>
