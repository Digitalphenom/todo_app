<ul id="lists">
<% @lists.each.with_index do |list, idx|%>
  <li>
     <a href="/lists/<%= idx %>">
      <h2 class="check" > <%= list[:name] %><h2>
      <p><%= display_count(list) %></p>
    </a>
  </li>
<% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>
