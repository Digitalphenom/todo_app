<ul id="lists" >
  <% @lists.each.with_index do |list, idx|%>
    <li class="<%= list_class(list) %>">
       <a href="/lists/<%= idx %>">
        <h2 > <%= list[:name] %><h2>
        <% total, done = display_count(list) %>
        <p><%= "#{total} / #{done}" %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>
