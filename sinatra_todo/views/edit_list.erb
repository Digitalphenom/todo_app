<section>
  <header>
    <ul id="lists">
      <li class="edit">
        <h2> <%= @lists[:name] %> <h2>
        <form action="/lists/<%= params[:id].to_s %>/delete"  method="post">
        <button type="submit" class="delete">Delete</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= params[:id] %>"  method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new list name:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @lists[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>
