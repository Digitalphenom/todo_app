<section id="todos" class="<%= list_class(@lists)%>">
  <header>
    <h2> <%= @lists[:name] %></h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_id.to_s %>/todos/complete" method="post">
          <button class="check" type="submit">Complete All</button>
        </form>
      </li>
      <li><a class="edit" href="/lists/<%= @list_id %>/edit">Edit</a></li>
    </ul>
  </header>
  <ul>
      <% sort_todos(@lists) do |todo, idx| %>
      <% if todo[:completed] %>
        <li class="complete">
      <% else %>
        <li> 
      <% end %>

          <form action="/lists/<%= @list_id %>/todos<%= idx %>" method="post" class="check">
            <input type="hidden" name="completed" value="<%= !todo[:completed] %>" />
            <button type="submit">Un-Mark</button>
          </form>

          <p><%= todo[:name] %></p>
          <form action="/lists/<%= @list_id %>/todos/<%= idx %>/delete" method="post" class="delete">
            <button type="submit">Delete</button>
          </form>
      </li>
    <% end %>
  </ul>
</section>

<!-- ◟◅◸◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◞ -->

<form action="/lists/<%= @list_id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Add todo" type="text" value="<%= params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

