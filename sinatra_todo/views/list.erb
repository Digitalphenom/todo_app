<section>
  <header>
    <ul >
      <li id="lists" >
        <h2> <%= @lists[:name] %> <h2>
        <p><a class="edit" href="/lists/<%= @list_id %>/edit">Edit</a></p>
      </li>
    </ul>
  </header>
  <ul>
      <% @lists[:todos].each.with_index do |todo, idx| %>
        <li>
          <p><%= todo[:name] %></p>
          <form action="/lists/<%= @list_id %>/delete%20item" method="post" class="delete">
          <input type="hidden" name="todo_item" value="<%= idx %>"> </input>
            <button type="submit">Delete</button>
          </form>
      </li>
    <% end %>
  </ul>
</section>

<!-- ◟◅◸◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◞ -->

<form action="/lists/<%= @list_id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Add todo" type="text" value="<%= params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

<!-- ◟◅◸◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◅▻◞ -->

<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<% end %>